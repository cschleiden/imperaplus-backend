@model ImperaPlus.DTO.Ladder.Ladder
@{
    ViewBag.Title = "Ladders - Create";
}

<h2>New Ladder</h2>

@using (Html.BeginForm("PostCreate", "Ladders", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading" role="tab">
            <h4 class="panel-title">

            </h4>
        </div>
        <div class="panel-collapse">
            <div class="panel-body form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(x => x.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(x => x.Name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-push-3 col-md-6 text-left">
                        <label>
                            @Html.EditorFor(x => x.IsActive) Is Active
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.MapTemplates, new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.ListBoxFor(x => x.MapTemplates,
                            new MultiSelectList(ViewBag.MapTemplates as IEnumerable<string>, Model.MapTemplates),
                            new { @class = "form-control" })
                    </div>
                </div>

                @Html.EditorFor(x => x.Options, "../Shared/GameOptions")
            </div>

            <div class="panel-footer clearfix">
                <div class="pull-right">
                    <button type="submit" class="btn btn-sm btn-info">Create</button>
                </div>
            </div>
        </div>
    </div>
}